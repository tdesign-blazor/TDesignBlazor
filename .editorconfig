# PullThroughDoc02: Replace with <inheritdoc/>
dotnet_diagnostic.PullThroughDoc02.severity = suggestion

# IDE0022: Use expression body for methods
dotnet_diagnostic.IDE0022.severity = suggestion

# CA1200: Avoid using cref tags with a prefix
dotnet_diagnostic.CA1200.severity = none

# PullThroughDoc03: Replace with base <summary>
dotnet_diagnostic.PullThroughDoc03.severity = silent

# IDE0058: Expression value is never used
dotnet_diagnostic.IDE0058.severity = silent

# CS8604: Possible null reference argument.
dotnet_diagnostic.CS8604.severity = warning

# CS8618: Non-nullable field must contain a non-null value when exiting constructor. Consider declaring as nullable.
dotnet_diagnostic.CS8618.severity = warning
