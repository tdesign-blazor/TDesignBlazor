@page "/components/datepicker"

<PageLayout Title="DatePicker 日期选择器" Description="用于选择某一具体日期或某一段日期区间。" ComponentType="typeof(TDatePicker<>)">
   <TAlert Theme="Theme.Primary">
       仅支持 <code>DateOnly</code>&nbsp;<code>DateTime</code> 或 <code>DateTimeOffset</code> 数据类型。
   </TAlert>

   <Example Title="示例">
    <Description></Description>
    <RunContent>
        <TDatePicker @bind-Value="TestDate"/>
        @TestDate
    </RunContent>
    <CodeContent>
        @Code.Create(@"
```cshtml-razor
<TDatePicker @bind-Value=""TestDate""/>

@code{
    DateTime? TestDate{ get; set; }
}
```
")
    </CodeContent>
</Example>
    <Example Title="年份选择器">
        <Description>
            用于年份的选择。用户仅需输入年份信息时使用，常用于如年账单等按年记录数据的查询场景。
        </Description>
        <RunContent>
            <TDatePicker @bind-Value="@Year" ViewMode="DatePickerViewMode.Year"/>
        </RunContent>
        <CodeContent>
            @Code.Create(@"
```cshtml-razor
<TDatePicker @bind-Value=""@Year"" ViewMode=""DatePickerViewMode.Year""/>
@code{
      DateOnly? Year { get; set; }
}
```
")
        </CodeContent>
</Example>
</PageLayout>

@code{
    DateTime? TestDate{ get; set; }

    DateOnly? Year{get;set;}
}

