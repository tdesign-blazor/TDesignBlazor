    <RunContent>
        <TSpace Gap="100px">
            <TSpaceItem>
                <TStepGroup Vertical>
                    <TStepItem Status="StepStatus.Finish">已完成的步骤</TStepItem>
                    <TStepItem Status="StepStatus.Process">进行中的步骤</TStepItem>
                    <TStepItem>未进行的步骤</TStepItem>
                    <TStepItem>未进行的步骤</TStepItem>
                </TStepGroup>
            </TSpaceItem>
            <TSpaceItem>
                <TStepGroup Vertical Dot>
                    <TStepItem Status="StepStatus.Finish">已完成的步骤</TStepItem>
                    <TStepItem Status="StepStatus.Process">进行中的步骤</TStepItem>
                    <TStepItem>未进行的步骤</TStepItem>
                    <TStepItem>未进行的步骤</TStepItem>
                </TStepGroup>
            </TSpaceItem>
        </TSpace>
    </RunContent>
    <CodeContent>
        @Code.Create(@"
